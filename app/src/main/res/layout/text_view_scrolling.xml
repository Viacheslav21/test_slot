    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_lbl"
        android:textSize="32dp"
        android:textStyle="bold"
